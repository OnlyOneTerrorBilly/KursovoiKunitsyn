<Page x:Class="Kursovoi.Pages.ViborDocumentaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursovoi.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ВыборДокумента">

    <Grid Background="#FFF5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#FF2C3E50">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>



                <Border Background="#FF2C3E50" Padding="10">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                    <Image Source="/Logo/LogoKursovoi.png"
                        Width="50"
                        Height="50"
                        Margin="0,0,10,0"/>

                    <TextBlock Text="ВЫБОР ДОКУМЕНТА"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center" 
                            Margin="0,0,20,0">
                    <TextBlock Text="Пользователь: " 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="UserNameText" 
                               Text="{Binding}" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Кнопки документов -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#FF2C3E50">
            <UniformGrid Columns="2" Margin="20">

                <!-- Оформление заказа -->
                <Button x:Name="BtnOformlenieZakaza" 
                        Height="100" 
                        Margin="10" 
                        Background="#FF3498DB"
                        Click="BtnOformlenieZakaza_Click">
                    <StackPanel>
                        <TextBlock Text="Оформление заказа" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"/>
                        
                    </StackPanel>
                </Button>

                <!-- Поступление товара -->
                <Button x:Name="BtnPostuplenieTovara" 
                        Height="100" 
                        Margin="10" 
                        Background="#FF3498DB"
                        Click="BtnPostuplenieTovara_Click">
                    <StackPanel>
                        <TextBlock Text="Поступление товара" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"/>
                        
                    </StackPanel>
                </Button>

                <!-- Спецификация на изделие -->
                <Button x:Name="BtnSpecifikaciya" 
                        Height="100" 
                        Margin="10" 
                        Background="#FF3498DB"
                        Click="BtnSpecifikaciya_Click">
                    <StackPanel>
                        <TextBlock Text="Спецификация на изделие" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"/>
                        
                    </StackPanel>
                </Button>

                <!-- Сборка -->
                <Button x:Name="BtnSborka" 
                        Height="100" 
                        Margin="10" 
                        Background="#FF3498DB"
                        Click="BtnSborka_Click">
                    <StackPanel>
                        <TextBlock Text="Сборка" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"/>
                        
                    </StackPanel>
                </Button>

                <!-- Список заказов -->
                <Button x:Name="BtnSpisokZakazov" 
                        Height="100" 
                        Margin="10" 
                        Background="#FF3498DB"
                        Click="BtnSpisokZakazov_Click">
                    <StackPanel>
                        <TextBlock Text="Список заказов" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"/>
                        
                    </StackPanel>
                </Button>

                <!-- Кнопка выхода -->
                <Button x:Name="BtnExit" 
                        Height="100" 
                        Margin="10" 
                        Background="#FFDE5555"
                        Click="BtnExit_Click">
                    <StackPanel>
                        <TextBlock Text="Выход" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

            </UniformGrid>
        </ScrollViewer>
    </Grid>
</Page>
